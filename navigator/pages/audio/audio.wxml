<audio poster='{{poster}}' name='{{name}}' author='{{author}}' src='{{src}}' id='myAudio' controls loop></audio>

<button type='primary' bindtap='audioPlay' style='margin-top:10px;'>播放</button>
<button type='default' bindtap='audioPause' style='margin-top:10px;'>暂停</button>
<button type='primary' bindtap='audio14' style='margin-top:10px;'>设置当前播放时间为14秒</button>
<button type='default' bindtap='audioStart' style='margin-top:10px;'>回到开头</button>
